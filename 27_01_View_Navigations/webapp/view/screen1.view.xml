<mvc:View xmlns:mvc = "sap.ui.core.mvc"
          xmlns = "sap.m"
          controllerName = "home.controller.screen1">
          <Page title="Overview page">

            <headerContent>
                <Button  icon="sap-icon://arrow-right" press=".onNext"></Button>
            </headerContent>
            <content>
            
                <DisplayListItem label="Type of Cars" value="Luxary cars, Passgenr cars, Racing Cars" ></DisplayListItem>
                <DisplayListItem label="Type of Bikes" value="Luxary Bikes, Passgenr Bikes, Racing Bikes, Gear less,  Gear bikes" ></DisplayListItem>
            
                <StandardListItem title="Maruthi cars" 
                icon="sap-icon://action"
                description="Range strats from 4 Laks"
                ></StandardListItem>

                <InputListItem>
                    <HBox>
                        <Label text="Enter your dream car name" />
                        <Input />
                        <Switch />
                    </HBox>
                
                </InputListItem>
            
            </content>

            <footer>
                <Toolbar>
                    <ToolbarSpacer ></ToolbarSpacer>
                    <Button text="Book Tickets"></Button>
                    <Button text="Cancel Tickets"></Button>
                </Toolbar>
            </footer>
          </Page>
    
</mvc:View>    